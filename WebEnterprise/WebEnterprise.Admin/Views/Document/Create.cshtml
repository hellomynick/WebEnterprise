@model WebEnterprise.ViewModels.Catalog.Document.DocumentsCreateRequest
@{
    ViewData["Title"] = "Tạo mới người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid wide">
    <div style="height: 100vh;">
        <div class="row">
            <div class="col l-8 l-o-2 c-8 c-o-2 m-8 m-o-2" style="margin-bottom: 10px;">
                <ul class="timeline">
                    <li class="time-item">
                        <div class="timeStamp">
                            <span class="time-date">1/1/2000</span>
                        </div>
                        <div class="time-status"><h4>Semester start</h4></div>
                    </li>
                    <li class="time-item">
                        <div class="timeStamp">
                            <span class="time-date">1/1/2000</span>
                        </div>
                        <div class="time-status"><h4>Semester end</h4></div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col l-8 l-o-2 c-8 c-o-2 m-8 m-o-2">
                <div class="uploadBox">
                    <i class="fas fa-file-upload"></i>

                    <form asp-action="Create" id="upload" enctype="multipart/form-data" method="post" style="width:100%">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div>
                            <input type="text" asp-for="Caption" name="Caption" id="" placeholder="Title..." class="input-title">
                            <label for="uploadInput" id="disable-upload"><input asp-for="DocumentFile" type="file" class="upload-hidden" multiple id="uploadInput">Upload Files</label>
                        </div>
                        <div class="selectedFiles">
                            <h2>Files Selected</h2>
                            <ul id="list-Files-Upload"></ul>
                        </div>
                        <input type="submit" value="Submit" name="submit" id="call-to-action" class="submit-upload">
                    </form>
                    <!-- <a class="upload-btn" id="call-to-action">
                        <span>Select file</span>
                    </a> -->
                    <div class="uploadCheckbox">
                        <input type="checkbox" name="" id="uploadCheckbox">
                        <span>I agree to Terms and Conditions </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>