@model WebEnterprise.ViewModels.Catalog.Document.DocumentsPostRequest

@{
    ViewData["Title"] = "Post Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="admin-body">
    <div class="grid wide">
        <div class="row">

            <div class="col l-12">
                <div class="col l-4">
                    <a class="btn btn-a" asp-action="Index" asp-controller="Document">Về danh sách</a>
                </div>

                <div class="row">
                    <div class="col l-4">
                        <div class="admin-createUser">
                            <form asp-action="PostDocument" enctype="multipart/form-data" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ID" />
                                <div class="form-group">
                                    <label asp-for="Status" class="form-control" style="text-align:center"></label>
                                    <input asp-for="Status" type="checkbox" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Update" class="btn" />
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</section>